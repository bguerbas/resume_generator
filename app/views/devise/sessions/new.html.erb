<div class="devise">
  <%= render "devise/shared/devise_image" %>

  <div class="container-form">
    <div>
      <%= image_tag("revelo_logo-principal.png", :alt => "rss feed") %>
      <h3><%= t('devise.welcome') %></h3>

      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="field">
          <%= f.label :email, t('devise.labels.email') %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
        </div>

        <div class="field">
          <%= f.label :password, t('devise.labels.password') %>
          <%= f.password_field :password, autocomplete: "current-password" %>
        </div>

        <div class="actions">
          <%= f.submit t('devise.actions.submit') %>
        </div>
      <% end %>

      <div class="links">
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>
