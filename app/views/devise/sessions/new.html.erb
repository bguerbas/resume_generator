<%= render "devise/shared/devise_image" %>

<h2><%= t('devise.welcome') %></h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field">
    <%= f.label :email, t('devise.labels.email') %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :password, t('devise.labels.password') %>
    <%= f.password_field :password, autocomplete: "current-password" %>
  </div>

  <div class="actions">
    <%= f.submit t('devise.actions.submit') %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
