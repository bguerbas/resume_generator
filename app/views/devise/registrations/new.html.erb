<div class="devise">
  <%= render "devise/shared/devise_image" %>

  <div class="container-form">
    <div>
      <%= image_tag("revelo_logo-principal.png", :alt => "Logo devise") %>
      <h2><%= t('devise.welcome') %></h2>

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <div class="field">
          <%= f.label :email, t('devise.labels.email') %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
        </div>

        <div class="field">
          <%= f.label :password, t('devise.labels.password') %>
          <%= f.password_field :password, autocomplete: "new-password" %>
        </div>

        <div class="field">
          <%= f.label :password_confirmation, t('devise.labels.password_confirmation') %>
          <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
        </div>

        <div class="actions">
          <%= f.submit t('devise.actions.submit') %>
        </div>

        <p class="terms"><%= t('devise.terms') %></p>
      <% end %>

      <div class="links">
        <%= render "devise/shared/links" %>
      </div>      
    </div>
  </div>
</div>